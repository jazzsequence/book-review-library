<?xml version="1.0"?>
<ruleset name="Book Review Library">
	<description>Custom ruleset for the Book Review Library project</description>
	<file>.</file>
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/tests/</exclude-pattern>
	<exclude-pattern>/inc/cmb2/</exclude-pattern>
	
	<!-- Base config -->
	<arg value="sp"/>
	<arg name="basepath" value="./"/>
	<arg name="extensions" value="php"/>
	<arg name="colors"/>
	<arg name="parallel" value="8"/>

	<!-- PHP Compatibility -->
	<config name="testVersion" value="8.3-"/>
	<!-- https://github.com/PHPCompatibility/PHPCompatibilityWP -->
	<rule ref="PHPCompatibilityWP"/>

	<!-- WordPress Coding Standards -->
	<config name="minimum_supported_wp_version" value="3.6"/>
	<rule ref="Pantheon-WP">
		<exclude name="WordPressVIPMinimum.Files.IncludingFile.UsingCustomConstant"/>
		<exclude name="WordPressVIPMinimum.Functions.RestrictedFunctions.custom_role_add_role"/> <!-- todo: add to pantheon wp coding standards -->
	</rule>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<!-- Value: replace the text domain used. -->
			<property name="text_domain" type="array" value="book-review-library"/>
		</properties>
	</rule>
	<rule ref="Squiz.Commenting.FileComment.Missing">
		<exclude-pattern>*/views/actions.php</exclude-pattern>
	</rule>
	<rule ref="Generic.CodeAnalysis.UnusedFunctionParameter.Found">
		<exclude-pattern>class-book-reviews.php</exclude-pattern>
	</rule>
	<rule ref="VariableAnalysis.CodeAnalysis.VariableAnalysis.UnusedVariable">
		<exclude-pattern>class-book-reviews.php</exclude-pattern>
	</rule>
	<rule ref="WordPress.Security.EscapeOutput.OutputNotEscaped">
		<exclude-pattern>class-book-reviews.php</exclude-pattern>
	</rule>
	<rule ref="WordPress.WP.I18n.MissingTranslatorsComment">
		<exclude-pattern>class-book-reviews.php</exclude-pattern>
	</rule>
	<rule ref="WordPressVIPMinimum.Functions.RestrictedFunctions.flush_rewrite_rules_flush_rewrite_rules">
		<exclude-pattern>class-book-reviews.php</exclude-pattern>
	</rule>
	<rule ref="WordPress.WP.Capabilities.Unknown">
		<exclude-pattern>class-book-reviews.php</exclude-pattern>
	</rule>
</ruleset>